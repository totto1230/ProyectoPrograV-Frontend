<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login1.Vistas.RequestFeature"
             Title="RequestFeature">

    <StackLayout Padding="20">
        <!-- Title Entry -->
        <Entry x:Name="TitleEntry" Placeholder="Enter title" />

        <!-- Description Entry -->
        <Editor x:Name="DescriptionEditor" Placeholder="Enter description" HeightRequest="200" />

        <!-- Submit Button -->
        <Button Text="Submit" Clicked="Button_Clicked"  HorizontalOptions="Center" Margin="10"/>
    </StackLayout>

</ContentPage>
